# Application Settings
APP_NAME="Dynamic Pricing System"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dynamic_pricing_db
DB_USER=root
DB_PASSWORD=

# Security
SESSION_LIFETIME=3600
PASSWORD_MIN_LENGTH=8
SECRET_KEY=your_secret_key_here_change_in_production

# Email Configuration (SMTP)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@dynamicpricing.com
SMTP_FROM_NAME=Dynamic Pricing System

# Pricing Configuration
MIN_PROFIT_MARGIN=0.10
MAX_PRICE_INCREASE=0.50
MAX_PRICE_DECREASE=0.30

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/public/assets/images/uploads/

# Pagination
PRODUCTS_PER_PAGE=20
ORDERS_PER_PAGE=20

# Currency
DEFAULT_CURRENCY=NGN

# Features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# API Settings
API_VERSION=v1
API_RATE_LIMIT=100